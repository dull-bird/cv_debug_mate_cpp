{
    "name": "cv-debugmate-cpp",
    "displayName": "CV DebugMate C++",
    "description": "Visualize OpenCV Mat and Point Cloud during C++ debugging. Inspired by Image Watch.",
    "version": "0.0.1",
    "license": "MIT",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.viewVariable",
                "title": "View by CV DebugMate"
            }
        ],
        "menus": {
            "debug/variables/context": [
                {
                    "command": "extension.viewVariable",
                    "when": "debugType == 'cppvsdbg' || debugType == 'cppdbg' || debugType == 'lldb'"
                }
            ],
            "debug/watch/context": [
                {
                    "command": "extension.viewVariable",
                    "when": "debugType == 'cppvsdbg' || debugType == 'cppdbg' || debugType == 'lldb'"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.93.0",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.9.1",
        "typescript": "^5.5.4",
        "vite": "^5.4.5"
    },
    "dependencies": {
        "open": "^10.1.0",
        "three": "^0.168.0"
    }
}